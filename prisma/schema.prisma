generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id          String        @id @default(uuid())
  name        String
  email       String        @unique
  password    String
  username    String?
  bio         String?
  avatar      String?
  urls        String[]
  birthDate   DateTime?
  language    String?
  font        String?
  theme       String?
  lastWatched LastWatched[]
  favorites   Favorites[]
  points      Int           @default(0)
  rank        Int           @default(0)
}

model Manga {
  id          String        @id
  title       String
  link        String
  cover       String
  lastWatched LastWatched[]
  favorites   Favorites[]
  points      Int           @default(0)
}

model LastWatched {
  id               Int      @id @default(autoincrement())
  userId           String
  mangaId          String
  episode          String
  progress         Float
  previousProgress Float
  date             DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id])
  manga            Manga    @relation(fields: [mangaId], references: [id])

  @@unique([userId, mangaId])
}

model Favorites {
  id      Int    @id @default(autoincrement())
  userId  String
  mangaId String
  user    User   @relation(fields: [userId], references: [id])
  manga   Manga  @relation(fields: [mangaId], references: [id])
}
